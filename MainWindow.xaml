<Window x:Class="sidebar_open_content_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sidebar_open_content_cs"
        mc:Ignorable="d"
        Title="Minimal Sidebar App"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="SidebarBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ContentBackground" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#3E3E42"/>
        <SolidColorBrush x:Key="ButtonPressed" Color="#007ACC"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SideButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Page Content Style -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Border Width="140" Background="{StaticResource SidebarBackground}">
            <StackPanel VerticalAlignment="Top" Margin="0,20,0,0">
                <Button Content="Chats" Click="Chats_Click" Style="{StaticResource SideButtonStyle}"/>
                <Button Content="Reminders" Click="Reminders_Click" Style="{StaticResource SideButtonStyle}"/>
                <Button Content="Quiz" Click="Quiz_Click" Style="{StaticResource SideButtonStyle}"/>
                <Button Content="Activity" Click="Activity_Click" Style="{StaticResource SideButtonStyle}"/>
                <Button Content="Exit" Click="Exit_Click" Style="{StaticResource SideButtonStyle}" Margin="0,30,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Margin="140,0,0,0" Background="{StaticResource ContentBackground}">
            <Grid x:Name="ChatsPage">
                <TextBlock Text="Chats Content Area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid x:Name="RemindersPage" Visibility="Collapsed">
                <TextBlock Text="Reminders Content Area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid x:Name="QuizPage" Visibility="Collapsed">
                <TextBlock Text="Quiz Content Area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid x:Name="ActivityPage" Visibility="Collapsed">
                <TextBlock Text="Activity Content Area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>